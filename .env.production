# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database - Supabase PostgreSQL (Configure with your Supabase credentials)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# JWT - Use a strong secret in production
JWT_SECRET="your-super-strong-jwt-secret-for-production-change-this"
JWT_EXPIRES_IN="8h"

# Email Configuration (Configure with your SMTP provider)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="FeedbackHub <noreply@feedbackhub.com>"

# File Upload
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
